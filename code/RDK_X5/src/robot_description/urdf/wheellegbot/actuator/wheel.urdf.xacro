<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="/app/workspace/src/robot_description/urdf/wheellegbot/common_inertia.xacro" />
    <!-- 声明 IMU 模块 -->
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <link name="${wheel_name}_link">
            <visual>
                <origin xyz="0 0 0" rpy="1.57079 0 0" />
                <geometry>
                    <cylinder radius="0.06" length="0.05"/>
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="1.57079 0 0" />
                <geometry>
                    <cylinder radius="0.06" length="0.05"/>
                </geometry> 
            </collision>
            <material name="yellow">
                <color rgba="1.0 1.0 0 0.8" />
            </material>

            <xacro:cylinder_inertia m="0.5" r="0.06" h="0.05" /> 
        </link>
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="base_link" />
            <child link="${wheel_name}_link" />
            <origin xyz="${xyz}" />
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>
</robot>